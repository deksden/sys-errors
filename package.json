    "repomix:all": "repomix",
    "repomix:no-tests": "repomix --ignore test/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deksden/sys-errors.git"
  },
  "keywords": [
    "error-handling",
