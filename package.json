  "description": "Centralized error handling system with error chaining, operation errors pattern, and logging integration",
  "type": "module",
  "main": "src/errors/errors.js",
  "files": [
    "src/errors"
  ],
  "scripts": {
    "test": "dotenvx run -- vitest run test/**/*.test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
