    "error-context",
    "validation",
    "debugging",
    "sys-errors"
  ],
  "author": "(c) fab33, by deksden",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deksden/sys-errors/issues"
  },
  "homepage": "https://github.com/deksden/sys-errors#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.34.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^8.57.1",
    "@vitest/coverage-v8": "^3.0.5",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.3",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "globals": "^13.24.0",
    "vitest": "^3.0.5"
  },
  "private": true
